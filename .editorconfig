root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false

[*.{ts*,js*}]
indent_style = space
indent_size = 2

[*.cshtml]
indent_style = space
indent_size = 4

[*.cs]
indent_style = tab
indent_size = 4

[*.sh]
end_of_line = lf
indent_style = space
indent_size = 4
